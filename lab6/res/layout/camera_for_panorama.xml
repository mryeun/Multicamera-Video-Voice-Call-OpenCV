<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1280" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="340" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="600" >

        <SurfaceView
            android:id="@+id/svCameraForPanorama"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <teaonly.droideye.HttpCameraPreview
            android:id="@+id/svOtherCameraForPanorama"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="invisible" />
    </RelativeLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:id="@+id/tvCameraForPanorama_MyIp"
        />
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:id="@+id/tvCameraForPanorama_ReceiveIp"
        />
</LinearLayout>